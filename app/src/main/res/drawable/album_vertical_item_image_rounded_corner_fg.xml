<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/black_50_transparent_with_dark_mode"/>
            <stroke android:width="@dimen/album_cover_stroke_size" android:color="@color/image_stroke_color"/>
            <corners android:topLeftRadius="@dimen/album_hidden_item_image_rounded_corner" android:topRightRadius="@dimen/album_hidden_item_image_rounded_corner"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/album_cover_stroke_size" android:color="@color/image_stroke_color"/>
            <corners android:radius="@dimen/album_hidden_item_image_rounded_corner"/>
        </shape>
    </item>
</selector>
